<UserControl x:Class="Experimental.Views.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Experimental.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Label 
                Margin="10"
                Content="{Binding Chrono}"
                Background="Aquamarine"
                MinHeight="20"
                Height="Auto"
                Width="400"             
                   />
            <ProgressBar 
                Foreground="Aqua"
                Width="400"
                Name="TestProgressBar"
                Height="20"
                HorizontalAlignment="Center"
                Background="Lavender"
                Value="{Binding Value, Mode=TwoWay}"
                Minimum="{Binding MinimumValue, Mode=TwoWay}"
                Maximum="100"         
                />
            <TextBlock
                Name="txtblk"
                Text="{Binding Text, Mode=TwoWay}"
                Margin="10"
                Background="LightGray"
                MinHeight="20"
                Width="400"
                HorizontalAlignment="Center"/>
            <TextBlock
                Name="txtblkInfo"
                Text="{Binding TextInfo, Mode=TwoWay}"
                Margin="10"
                Background="Yellow"
                MinHeight="20"
                Width="400"
                HorizontalAlignment="Center"/>
            <Button 
                Margin="10"
                Name="DoWorkBtn"
                Content="Do Work"
                Height="20"
                Width="60"
                HorizontalAlignment="Center"
                Command="{Binding DoWorkCommand}"
                IsEnabled="{Binding ButtonIsEnabled, Mode=TwoWay}"
                />
            <TextBox 
                MinHeight="50"
                Width="400"
                HorizontalAlignment="Center"
                Background="LightSalmon"
                Text="Write Here" />
        </StackPanel>
            
    </Grid>
</UserControl>
